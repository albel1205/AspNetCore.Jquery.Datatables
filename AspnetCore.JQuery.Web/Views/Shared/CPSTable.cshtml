@using JQuery.Datatables.Core
@model DataTableConfigVm
<br />
<link rel="stylesheet" href="//cdn.datatables.net/1.10.0/css/jquery.dataTables.css" />
<link rel="stylesheet" href="//cdn.datatables.net/tabletools/2.2.1/css/dataTables.tableTools.css" />
<link rel="stylesheet" href="@Url.Content("~/lib/jquery-ui-timepicker-addon/jquery-ui-timepicker-addon.css")" />
<link rel="stylesheet" href="@Url.Content("~/lib/jquery.dataTables.columnFilter/jquery.dataTables.columnFilter.css")" />
<link rel="stylesheet" href="//cdn.datatables.net/colvis/1.1.1/css/dataTables.colVis.css" />

@{
    var vm = Model;
}

<script type="text/javascript">
    function encloseInEmTag(data, type, full) {
        return '<em>' + data + '</em>';
    }
</script>
@await Html.PartialAsync("_DataTable", vm)

@section Scripts{
    <script type="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/9.2.0/highlight.min.js" language="javascript">
    </script>
    <script type="text/javascript" src="//cdn.datatables.net/1.10.11/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="//cdn.datatables.net/1.10.11/js/dataTables.bootstrap.min.js"></script>
    <!-- table tools (csv export etc) https://datatables.net/extensions/tabletools -->
    <script type="text/javascript" src="//cdn.datatables.net/tabletools/2.2.1/js/dataTables.tableTools.min.js"></script>
    <script type="text/javascript" src="@Url.Content("~/lib/jquery-ui-timepicker-addon/jquery-ui-timepicker-addon.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/lib/jquery.dataTables.columnFilter/jquery.dataTables.columnFilter.js")"></script>
    <script type="text/javascript" src="//cdn.datatables.net/colvis/1.1.1/js/dataTables.colVis.min.js"></script>
}
